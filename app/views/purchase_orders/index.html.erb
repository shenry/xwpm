<div class="row spacer">
	<div class="row-same-height">
		<div class="col-lg-8 col-xs-height"><h1>Open Purchase Orders</h1></div>
		<div class="col-lg-4 col-xs-height"><%= link_to "Create New Purchase Order", new_purchase_order_path, class: "pull-right" %></div>
	</div>
</div>
<div class="row spacer">
	<div class="col-lg-12">
		<table class="table table-responsive no-top-border">
			<tr>
				<th>PO #</th>
				<th>Order Date</th>
				<th>No. Items</th>
				<th>&nbsp;</th>
				<th>&nbsp;</th>
			</tr>
			<% @purchase_orders.each do |po| %>
				<tr>
					<td><%= po.number %></td>
					<td><%= po.order_date %></td>
					<td><%= po.line_items.size %></td>
					<td><%= link_to "Add Line Items", purchase_order_path(po) %></td>
					<td><%= link_to "Close", "#" %></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>