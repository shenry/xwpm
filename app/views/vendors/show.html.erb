<%= render partial: "firms/show_header", locals: { firm: @firm } %>
<div class="row spacer">
	<div class="col-xs-12">
		<ul class="nav nav-tabs nav-justified" id="firm-show-subnav">
			<% @firm.product_types.each_with_index do |type, index| %>
				<% default = index == 0 ? true : false %>
				<%= sub_nav_link_for(model_to_controller(type).intern, default: default) %>
			<% end %>
			<%= sub_nav_link_for(:purchase_orders) %>
		</ul>
	</div>
	<div class="col-xs-12 spacer" id="firm-show-category">
		<%= render_firm_partial(@category) %>
	</div>
</div>