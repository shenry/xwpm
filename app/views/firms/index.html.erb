<div class='row'>
	<div class='row-same-height'>
		<div class='col-xs-8 col-xs-height'>
			<h1><%= @klass.to_s.humanize.pluralize %></h1>
		</div>
		<div class='col-xs-4 col-xs-height text-right'>
			<%= link_to "New #{@klass.to_s}", controller: @klass.to_s.downcase.pluralize, action: "new" %>
		</div>
	</div>
</div>
<div class='row'>
	<table class='table table-striped'>
		<tr>
			<th>Name</th>
			<th>Code</th>
			<th>Contact</th>
			<th>Email</th>
			<th>Phone</th>
			<th>Address</th>
			<% if @klass == Customer %>
				<th>Active Projects</th>
				<th>&nbsp;</th>
			<% end %>
		</tr>
		<% for firm in @firms %>
			<tr class='table-striped'>
				<td><%= link_to firm.name, controller: @klass.to_s.downcase.pluralize, action: 'show', id: firm %></td>
				<td><%= firm.code %></td>
				<td><%= firm.contact_name %></td>
				<td><a href="mailto:<%= firm.contact_email %>"><%= firm.contact_email %></a></td>
				<td><%= firm.contact_phone %></td>
				<td><%= firm.one_line_address %></td>
				<% if @klass == Customer %>
					<td><%= firm.projects.size %></td>
					<td><%= link_to "New Project", new_customer_project_path(firm) %></td>
				<% end %>
			</tr>			
		<% end %>
	</table>
	<%= paginate @firms %>
</div>