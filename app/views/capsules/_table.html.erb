<table class="table table-striped">
	<tr>
		<th>&nbsp;</th>
		<th>Vendor</th>
		<th>Item #</th>
		<th>Color</th>
		<th>Material</th>
		<th>Artwork</th>
		<th>Specs</th>
		<th>&nbsp;</th>
	</tr>
	<% @components.each do |capsule| %>
		<tr id="capsule-id">
			<td><%= link_to cl_image_tag(capsule.image_url(:thumb)), capsule.image_url, target: :_blank %></td>
			<td><%= link_to capsule.vendor.name, vendor_path(capsule.vendor) %></td>
			<td><%= link_to capsule.item_number, capsule_path(capsule) %></td>
			<td><%= capsule.color %></td>
			<td><%= capsule.material %></td>
			<td><%= cl_image_tag(capsule.artwork_url(:thumb)) %></td>
			<td><%= capsule.specs %></td>
			<td>
				<%= link_to capsule_path(capsule), data: { remote: true, method: :delete, 
										confirm: "Are you sure you want to delete this Capsule?" } do %>
					<span class="glyphicon glyphicon-trash"></span>				
				<% end %>
			</td>
		</tr>
	<% end %>
</table>