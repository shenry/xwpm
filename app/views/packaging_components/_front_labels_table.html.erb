<div class='row spacer'>
	<table class='table table-striped'>
		<tr>
			<th>&nbsp;</th>
			<th>Vendor</th>
			<th>Type</th>			
			<th>Size</th>
			<th>Taper/Cut</th>
			<th>Treatments</th>
			<th>Designer</th>
			<th>Rewind</th>
			<th>Position</th>
			<th>&nbsp;</th>
		</tr>
		<% for component in @components %>
		<tr>
			<td><%= render partial: '/partials/avatar_thumbnail', locals: { :object => component } %></td>
			<td><%= link_to component.vendor.name, vendor_path(component.vendor) %></td>
			<td><%= component.material %></td>
			<td><%= component.specs %></td>
			<td><%= component.label_cut %></td>
			<td><%= component.label_treatment %></td>
			<td><%= component.artwork_source %></td>
			<td><%= component.label_rewind %></td>
			<td><%= component.label_position %></td>
			<td>
				<a href="<%= front_label_path(component) %>" method="_delete" data-method="delete" class="btn btn-default btn-xs" data-confirm="Are you sure you want to delete this <%= @klass.to_s.downcase %>?">
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
				</a>
			</td>
		</tr>
		<% end %>
	</table>
</div>
