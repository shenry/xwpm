<div class='form-group'>
	<span class='col-xs-2 control-label bold'>Specs</span>
	<div class='col-xs-2'>
		<%= f.text_field :height, class: 'form-control col-xs-2', placeholder: 'Height' %>	
	</div>
	<div class='x-spacer'>x</div>
	<div class='col-xs-2'>
		<%= f.text_field :width, class: 'form-control col-xs-2', placeholder: @klass.width_or_diameter.humanize %>					
	</div>
	<% if @klass.has_depth? %>
	<div class='col-xs-2'>
		<input type='text' class='form-control col-xs-2' name='packaging_component[depth]' placeholder='Depth'>				
	</div>
	<% end %>
	<div class='col-xs-2'>
		<%= f.select :units, @klass.spec_select_options, {}, class: 'form-control', id: 'specs-form-control' %>
	</div>
</div>