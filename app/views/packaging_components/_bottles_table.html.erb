<div class='row'>
	<table class='table table-striped'>
		<tr>
			<th>&nbsp;</th>
			<th>Vendor</th>
			<th>Code</th>
			<th>Specs</th>
			<th>Capacity</th>
			<th>Shape</th>
			<th>Mould</th>
			<th>Color</th>
			<th>&nbsp;</th>
		</tr>
		<% for component in @components %>
		<tr>
			<td><%= render partial: '/partials/avatar_thumbnail', locals: { :object => component } %></td>
			<td><%= link_to component.vendor.name, vendor_path(component.vendor) %></td>
			<td><%= link_to component.code, controller: component.class.to_s.downcase.pluralize, action: 'show', id: component %></td>
			<td><%= component.specs %></td>
			<td><%= component.capacity_string %></td>
			<td><%= component.shape %></td>
			<td><%= component.mould %></td>
			<td><%= component.color %></td>
			<td>
				<a href="<%= bottle_path(component) %>" method="_delete" data-method="delete" class="btn btn-default btn-xs" data-confirm="Are you sure you want to delete this <%= @klass.to_s.downcase %>?">
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
				</a>
			</td>
		</tr>
		<% end %>
	</table>
</div>