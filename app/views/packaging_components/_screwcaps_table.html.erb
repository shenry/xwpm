<div class='row'>
	<table class='table table-striped'>
		<tr>
			<th>Vendor</th>
			<th>Name</th>
			<th>Specs</th>
			<th>Material</th>
			<th>Color</th>
			<th>&nbsp;</th>
		</tr>
		<% for screwcap in @components %>
		<tr>
			<td><%= link_to screwcap.vendor.name, vendor_path(screwcap.vendor) %></td>
			<td><%= link_to screwcap.name, screwcap_path(screwcap) %></td>
			<td><%= screwcap.specs %></td>
			<td><%= screwcap.material %></td>
			<td><%= screwcap.color %></td>
			<td>
				<a href="<%= screwcap_path(screwcap) %>" method="_delete" data-method="delete" class="btn btn-default btn-xs" data-confirm="Are you sure you want to delete this <%= @klass.to_s.downcase %>?">
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
				</a>
			</td>
		</tr>
		<% end %>
	</table>
</div>