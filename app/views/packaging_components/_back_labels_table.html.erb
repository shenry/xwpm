<div class='row spacer'>
	<table class='table table-striped'>
		<tr>
			<th>Vendor</th>
			<th>Type</th>			
			<th>Size</th>
			<th>Taper/Cut</th>
			<th>Treatments</th>
			<th>Designer</th>
			<th>Rewind</th>
			<th>Position</th>
			<th>&nbsp;</th>
		</tr>
		<% for back_label in @components %>
		<tr>
			<td><%= link_to back_label.vendor.name, vendor_path(back_label.vendor) %></td>
			<td><%= back_label.material %></td>
			<td><%= back_label.specs %></td>
			<td><%= back_label.label_cut %></td>
			<td><%= back_label.label_treatment %></td>
			<td><%= back_label.artwork_source %></td>
			<td><%= back_label.label_rewind %></td>
			<td><%= back_label.label_position %></td>
			<td>
				<a href="<%= back_label_path(back_label) %>" method="_delete" data-method="delete" class="btn btn-default btn-xs" data-confirm="Are you sure you want to delete this <%= @klass.to_s.titleize.downcase %>?">
					<span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
				</a>
			</td>
		</tr>
		<% end %>
	</table>
</div>