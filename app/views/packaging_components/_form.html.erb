<%= f.error_notification %>
<%= f.input :vendor_id, :collection => Vendor.order(:name).map { |v| [v.name, v.id] }, :include_blank => false %>
<% if @klass == Bottle %>
	<%= f.input :item_identifier, label: "Item Identifier" %>
	<%= f.input :mould %>
	<%= f.input :color %>
	<%= f.input :shape %>
	<%= f.input :avatar, as: :attachinary %>
	<%= render partial: "specs_form_row", locals: { :klass => @klass, :f => f } %>
	<%= render partial: "capacity_form_row", locals: { :klass => @klass, :f => f } %>
	<div class='form-group'>
		<span class='col-xs-2 control-label bold'>Fill Point</span>
		<div class='col-xs-2'>
			<%= f.text_field :fill_point, class: 'form-control col-xs-2' %>
		</div>
		<div class='col-xs-2'>
			<%= f.select :fill_point_units, @klass.spec_select_options, {}, class: 'form-control' %>
		</div>
	</div>
<% elsif @klass == Capsule %>
	<%= f.input :item_identifier, label: "Item Identifier" %>
	<%= f.input :material %>
	<%= f.input :color %>
	<%= render partial: "specs_form_row", locals: { :klass => @klass, :f => f } %>
	<%= render partial: "/packaging_components/product_image_form_row", locals: { :klass => @klass, :f => f } %>
<% elsif @klass == Shipper %>
	<%= f.input :item_identifier, label: "Item Identifier" %>
	<%= render partial: "specs_form_row", locals: { :klass => @klass, :f => f } %>
	<%= render partial: "capacity_form_row", locals: { :klass => @klass, :f => f } %>
	<%= render partial: "/packaging_components/product_image_form_row", locals: { :klass => @klass, :f => f } %>
	<%= render partial: "product_assets", locals: { :klass => @klass, :f => f } %>
<% elsif [Cork, Screwcap].include? @klass %>
	<%= f.input :item_identifier, label: "Item Identifier" %>
	<%= f.input :material %>
	<%= f.input :color %>
	<%= render partial: 'specs_form_row', locals: { :klass => @klass, :f => f } %>
<% elsif [FrontLabel, BackLabel].include? @klass %>
	<%= f.input :item_identifier, label: "Item Identifier" %>
	<% if @klass == FrontLabel %>
		<%= f.input :label_alc, label: "Label Alc" %>
		<%= f.input :upc, label: "UPC" %>
	<% end %>
	<%= render partial: 'specs_form_row', locals: { :klass => @klass, :f => f } %>
	<%= f.input :material, label: "Paper Stock" %>
	<%= f.input :label_treatment, label: "Treatment" %>
	<%= f.input :label_rewind, label: "Rewind" %>
	<%= f.input :label_cut, label: "Cut" %>
	<div class='form-group'>
		<span class='col-xs-2 control-label bold'>Label Position</span>
		<div class='col-xs-2'>
			<%= f.text_field :label_position, class: 'form-control col-xs-2' %>
		</div>
		<div class='col-xs-2' id='label-position-units'>
			<%= f.select :units, @klass.spec_select_options, {}, class: 'form-control', id: 'mirror-units', disabled: true %>
		</div>
	</div>
	<%=  %>
<% end %>
<%= f.button :submit, "#{@packaging_component.new_record? ? 'Create' : 'Update'} #{klass.to_s.titleize}", class: 'col-xs-offset-2 spacer' %>