<div class="col-xs-6">
<%= f.error_notification %>
<%= f.input :vendor_id, :collection => Vendor.order(:name).map { |v| [v.name, v.id] }, 
											include_blank: "Select Vendor", class: "form-control" %>
<% if @klass == Bottle %>
	<%= f.input :item_identifier %>
	<%= f.input :mould %>
	<%= f.input :color %>
	<%= f.input :shape %>
	<%= render partial: 'image_upload_form', locals: { :packaging_component => @packaging_component, :f => f } %>
	<%= render partial: 'attachments_upload_form', locals: { :packaging_component => @packaging_component, :f => f } %>
	<%= render partial: "specs_form_row", locals: { :klass => @klass, :f => f } %>
	<%= render partial: "capacity_form_row", locals: { :klass => @klass, :f => f } %>
	<%= render partial: 'fill_point', locals: { :klass => @klass, :f => f } %>
<% elsif @klass == Capsule %>
	<%= f.input :item_identifier, label: "Item Identifier" %>
	<%= f.input :material %>
	<%= f.input :color %>
	<%= render partial: 'image_upload_form', locals: { :packaging_component => @packaging_component, :f => f } %>
	<%= render partial: 'attachments_upload_form', locals: { :packaging_component => @packaging_component, :f => f } %>
	<%= render partial: "specs_form_row", locals: { :klass => @klass, :f => f } %>
<% elsif [Cork, Screwcap].include? @klass %>
	<%= f.input :item_identifier, label: "Item Identifier" %>
	<%= f.input :material %>
	<%= f.input :color %>
	<%= render partial: 'image_upload_form', locals: { :packaging_component => @packaging_component, :f => f } %>
	<%= render partial: 'attachments_upload_form', locals: { :packaging_component => @packaging_component, :f => f } %>
	<%= render partial: 'specs_form_row', locals: { :klass => @klass, :f => f } %>
<% elsif [FrontLabel, BackLabel].include? @klass %>
	<%= f.input :item_identifier, label: "Item Identifier" %>
	<%= f.input :artwork_source, label: "Artwork Source" %>
	<% if @klass == FrontLabel %>
		<%= f.input :label_alc, label: "Label Alc" %>
		<%= f.input :upc, label: "UPC" %>
	<% end %>
	<%= render partial: 'specs_form_row', locals: { :klass => @klass, :f => f } %>
	<%= render partial: 'image_upload_form', locals: { :packaging_component => @packaging_component, :f => f } %>
	<%= render partial: 'attachments_upload_form', locals: { :packaging_component => @packaging_component, :f => f } %>
<% end %>
<% unless [Bottle, FrontLabel, BackLabel].include? @klass %>
	<%= f.button :submit, class: 'col-xs-offset-4 submit-spacer col-xs-8' %>
<% end %>
</div>
<div class="col-xs-6">
	<% if @klass == Bottle %>
		<%= f.input :case_capacity %>
		<%= f.input :carton_size %>
		<%= f.input :case_weight %>
		<%= f.input :pallet_configuration %>
		<%= f.button :submit, class: 'col-xs-offset-4 submit-spacer col-xs-8' %>
	<% elsif [FrontLabel, BackLabel].include? @klass %>
		<%= f.input :material, label: "Paper Type" %>
		<%= f.input :label_treatment, label: "Treatment" %>
		<%= f.input :label_rewind, label: "Rewind" %>
		<%= f.input :label_cut, label: "Cut" %>
		<%= render partial: 'label_position', locals: { :klass => @klass, :f => f } %>
		<%= f.button :submit, class: 'col-xs-offset-4 submit-spacer col-xs-8' %>
	<% end %>
</div>