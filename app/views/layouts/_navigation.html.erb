<%= nav_bar responsive: true, brand: "X Winery PM" do %>
	<%= menu_group do %>
		<% if user_signed_in? %>
			<%= menu_item 'Home', root_path %>
			<%= menu_item	'Wines', wines_path %>
			<%= menu_item 'Customers', customers_path %>
			<%= menu_item	'Packages', packages_path %>
			<%= menu_item	'Packaging Components', packaging_components_path %>
		<% end %>
	<% end %>
	<% if current_user && current_user.admin? %>
		<%= menu_group do %>
			<%= menu_item "Admin", admin_root_path %>
		<% end %>
	<% end %>
	<%= menu_group pull: :right do %>
		<% if user_signed_in? %>
			<%= menu_item 'Sign Out', destroy_user_session_path, data:{method: :delete} %>
		<% else %>
			<%= menu_item 'Sign in', new_user_session_path %>
		<% end %>
	<% end %>
<% end %>