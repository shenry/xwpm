<div class='row spacer'>
	<div class='row-same-height'>
		<div class='col-xs-8 col-xs-height'>
			<h1><%= @customer ? @customer.name : "All" %> Projects</h1>
		</div>
		<div class='col-xs-4 col-xs-height text-right'>
			<% if @customer %>
				<%= link_to "New #{@customer.name} Project", new_customer_project_path(@customer) %>
			<% end %>
		</div>
	</div>
</div>
<div class='row spacer'>
	<table class='table table-striped'>
		<tr>
			<th class="col-sm-1">Project Number</th>
			<% unless @customer %>
				<th>Customer</th>
			<% end %>
			<th>Brand</th>
			<th>Vintage</th>
			<th>Variety</th>
			<th>Appellation</th>
			<th>Cases</th>
			<th class="col-sm-1">Bottling Date</th>
			<th>Wine</th>
			<th>Actions</th>
			<th>Status</th>
		</tr>
		<% for project in @projects %>
		<tr class='table-striped'>
			<td><%= link_to project.project_number, project_path(project) %></td>
			<% unless @customer %>
				<td><%= link_to project.customer.name, polymorphic_path(project.customer) %></td>
			<% end %>
			<td><%= project.brand %></td>
			<td><%= project.vintage %></td>
			<td><%= project.variety %></td>
			<td><%= project.appellation %></td>
			<td><%= number_with_delimiter(project.target_cases, delimiter: ",") %></td>
			<td><%= project.formatted_bottling_date %></td>
			<td><%= link_to project.wine.sample_number, wine_path(project.wine) %></td>
			<td>#TODO</td>
			<td>#TODO</td>
		</tr>
		<% end %>
	</table>
</div>