<div class="row">
	<%= render partial: "/partials/front_label_summary", locals: { label: @project.front_label } %>
	<%= render partial: "/partials/back_label_summary", locals: { label: @project.back_label } %>
</div>
<div class="row spacer">
	<%= render partial: "/partials/bottle_summary", locals: { bottle: @project.bottle } %>
