		<%= render partial: "/partials/capsule_summary", locals: { capsule: @project.capsule } %>
	<% else %>
		<%= render partial: "/partials/closure_summary", locals: { closure: @project.closure } %>
	<% end %>
</div>
<% if @project.has_capsule? %>
	<div class="row spacer">
		<%= render partial: "/partials/closure_summary", locals: { closure: @project.closure } %>
	</div>
<% end %>