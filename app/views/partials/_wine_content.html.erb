<% if @project.wine %>
	<div class="h3-wrap">
		<span class="h3"><%= @project.wine.to_s %></span>
		<%= link_to "Edit Wine", wine_path(@project.wine), class: "pull-right" %>
	</div>
	<div class="col-xs-4">
		<table class="table table-responsive no-top-border">
			<tr>
				<td>Sample Number</td>
				<td class="bold"><%= @project.wine.sample_number %></td>
			</tr>
			<tr>
				<td>Vinx2 Referece</td>
				<td class="bold"><%= @project.wine.vinx2_reference %></td>
			</tr>
			<tr>
				<td>Alc</td>
				<td class="bold"><%= @project.wine.alc %>%</td>
			</tr>
			<tr>
				<td>Gallons / Cases</td>
				<td class="bold">
					<% if @project.wine.blend_volume %>
						<%= number_with_delimiter(@project.wine.blend_volume.to_i) %> gal / <%= number_with_delimiter(@project.wine.cases) %> cs
					<% end %>
				</td>
			</tr>
		</table>
	</div>
	<div class="col-xs-4">
		<table class="table table-responsive no-top-border">
			<tr>
				<td>Vintage</td>
				<td class="bold"><%= @project.wine.vintage %>
					<% if @project.wine.blend_volume %>
						&nbsp;(<%= number_to_percentage(@project.wine.weighted_avg(:vintage), precision: 2) %>)
					<% end %>
				</td>
			</tr>
			<tr>
				<td>Appellation</td>
				<td class="bold"><%= @project.wine.appellation %>
					<% if @project.wine.blend_volume %>
						&nbsp;(<%= number_to_percentage(@project.wine.weighted_avg(:appellation), precision: 2) %>)
					<% end %>
				</td>
			</tr>
			<tr>
				<td>Variety</td>
				<td class="bold"><%= @project.wine.variety %>
					<% if @project.wine.blend_volume %>
						&nbsp;(<%= number_to_percentage(@project.wine.weighted_avg(:variety), precision: 2) %>)
					<% end %>
				</td>
			</tr>
		</table>
	</div>
	<div class="col-xs-4">
		<% unless @project.wine.description.blank? %>
			<h3 class="title">Description</h3>
			<p><%= @project.wine.description %></p>
		<% else %>
			<h3 class="title empty-category-title">No Description</h3>
		<% end %>
		<% unless @project.wine.treatments.blank? %>
			<h3 class="title">Treatments</h3>
			<p><%= markup(@project.wine.treatments) %></p>
		<% else %>
			<h3 class="title empty-category-title">No Treatments</h3>
		<% end %>
	</div>
<% else %>
	<div class="col-xs-6 spacer">
		<%= select_tag "project[wine_id]", options_for_select(Wine.select_options), class: "add-wine form-control select gray",
			 							include_blank: "Add Wine to Project...", data: { type: "script", remote: true,
											url: url_for(controller: "projects", action: "update", id: @project.id), 
											method: :put, model: "wine" } %>
	</div>
<% end %>